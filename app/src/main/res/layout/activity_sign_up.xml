<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="#2D2D2D"
    >

    android:font="@font/marvelfont"


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="MARVEL"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        android:background="#F0131E"
        android:fontFamily="@font/marvelfont"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/marvelLogo"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PEDIA"
        android:textSize="55dp"
        android:textColor="#F0131E"
        android:fontFamily="@font/marvelfont"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/marvelLogo"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/pediaLogo"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutFirstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pediaLogo"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColorHint="#A4A4A4"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Firstname"
            android:background="@drawable/radius"
            android:textSize="23dp"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#CFCECE"
            android:shape="rectangle"
            android:id="@+id/firstname"/>
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutLastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutFirstname"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColorHint="#A4A4A4"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lastname"
            android:background="@drawable/radius"
            android:textSize="23dp"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#CFCECE"
            android:shape="rectangle"
            android:id="@+id/lastname"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutLastname"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColorHint="#A4A4A4"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:background="@drawable/radius"
            android:textSize="23dp"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#CFCECE"
            android:shape="rectangle"
            android:id="@+id/nickname"/>
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutNickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColorHint="#A4A4A4">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e-mail"
            android:background="@drawable/radius"
            android:textSize="23dp"
            android:inputType="textEmailAddress"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#CFCECE"
            android:shape="rectangle"
            android:id="@+id/emailsu"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:textColorHint="#A4A4A4"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/layoutEmail"
        app:layout_constraintEnd_toEndOf="@id/layoutEmail"
        app:layout_constraintTop_toBottomOf="@id/layoutEmail"
        app:passwordToggleTint="#ffffff">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="password"
            android:inputType="textPassword"
            android:background="@drawable/radius"
            android:textSize="23dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#CFCECE"
            android:shape="rectangle"
            android:id="@+id/passwordsu"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        app:autoSizeTextType="uniform"
        android:background="@drawable/radius_red"
        android:fontFamily="@font/marvelfont"
        android:text="SIGN UP"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/layoutPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"></Button>
    <TextView
        android:id="@+id/backsignin"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="I already have an account."
        android:gravity="center"
        android:paddingVertical="6dp"
        app:autoSizeTextType="uniform"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/signup"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        ></TextView>






</androidx.constraintlayout.widget.ConstraintLayout>